<div class="container">
  
  <div class="row my-1 mx-1">
    <%= month_calendar events: @foods do |date, foods| %>
      <%= date.day %>

      <% foods.each do |food| %>
        <div>
          <%= link_to food_path(food.id) do %>
            <i class="fa-solid fa-utensils"></i>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>