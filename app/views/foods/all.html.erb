<div class="container">
  <div class="row mt-4">
    <table>
      <tr>
        <th>日付</th>
        <th>朝食</th>
        <th>昼食</th>
        <th>夕食</th>
        <th>メモ</th>
        <th></th>
        <th></th>
      </tr>
      <% @foods.each do |food| %>
      <tr>
        <td class="pr-3 pb-1"><%= food.start_time.strftime("%Y年%m月%d日") %></td>
        <td class="pr-3 pb-1"><%= food.morning %></td>
        <td class="pr-3 pb-1"><%= food.noon %></td>
        <td class="pr-3 pb-1"><%= food.night %></td>
        <td class="pr-3 pb-1"><%= food.memo %></td>
        <td><%= link_to '編集', edit_food_path(food.id), class: "btn btn-outline-success mx-3" %></td>
        <td><%= link_to '削除', food_path(food), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-outline-success"  %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="row mt-3">
    <%= link_to 'カレンダーに戻る', foods_path, class: "btn btn-outline-success" %>
  </div>
</div>
